package com.gao.chapter.one;

public class PrintDiamond {
	public static void main(String[] args) {
		for(int i = 5;i>0;i--) {
			
			for(int j = 0;j<i;j++)System.out.print(" ");
			if(i==5)System.out.print("*");
			for(int j = 0;j<i;j++)System.out.print(" ");
			System.out.print("*");
			for(int j = 0;j<i;j++)System.out.print(" "); 
				
				
			System.out.println("*");
		}
	}
}
